{% extends "layout.twig" %}

{% block title %}
    Sign Up Page
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Sign Up
                </div>
                <form action="{{ path_for('auth_sign_up') }}" method="post" novalidate>
                    <div class="panel-body">
                        <div class="form-group {% if errors.username %} has-error {% endif %}">
                            <label for="username">Username</label>
                            <input  class="form-control" type="text" name="username" value='{{ old.username }}'>
                            {% if errors.username %}
                                <span class="help-block">
                                    {{  errors.username | first }}
                                </span>
                            {% endif %}
                        </div>
                        <div class="form-group {% if errors.email %} has-error {% endif %}">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" name="email" value='{{ old.email }}'>
                            {% if errors.email %}
                                <span class="help-block">
                                    {{  errors.email | first }}
                                </span>
                            {% endif %}
                        </div>
                        <div class="form-group {% if errors.password %} has-error {% endif %}">
                            <label for="password">Password</label>
                            <input class="form-control" type="password" name="password">
                            {% if errors.password %}
                                <span class="help-block">
                                    {{  errors.password | first }}
                                </span>
                            {% endif %}
                        </div>
                        <div class="button-group">
                            <button class="btn btn-default" type="submit">Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}